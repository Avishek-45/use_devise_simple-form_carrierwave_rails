<div class="container mt-4">
    <h3 class="text-center">Edit your post</h3>

        <%= simple_form_for @post do |f| %>
            <%= f.input :user_id,collection: [[current_user.email , current_user.id]]   %>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.file_field :cover %><br><br>
            <%= f.button :submit,"Update Post" ,class:"btn btn-success"%>
        <% end %>
</div>